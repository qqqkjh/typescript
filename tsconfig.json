        "sourceMap": true,
        "outDir": "dist",
        "module": "CommonJS",
        "strict": true,
      "noImplicitAny": false,
      "noEmitOnError": true,
      "removeComments": false,
    },
    "include": [
      "src/**/*.ts"
    ],
